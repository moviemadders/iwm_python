# Environment Configuration Template
# Copy this to .env and fill in your actual values

# ==========================================
# DATABASE (AWS RDS PostgreSQL)
# ==========================================
# Format: postgresql+asyncpg://USERNAME:PASSWORD@RDS_ENDPOINT:PORT/DATABASE_NAME
# Example: postgresql+asyncpg://postgres:MySecurePass123@movie-madders-db.abc123.us-east-1.rds.amazonaws.com:5432/moviemadders
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@YOUR_RDS_ENDPOINT:5432/moviemadders

# ==========================================
# AWS S3 STORAGE
# ==========================================
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# ==========================================
# JWT / AUTHENTICATION
# ==========================================
JWT_SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXP_MINUTES=30
REFRESH_TOKEN_EXP_DAYS=7

# ==========================================
# CORS (Frontend URL)
# ==========================================
# For local development
# CORS_ORIGINS=http://localhost:3000
# For production (AWS Amplify or Vercel)
# CORS_ORIGINS=["https://your-app.amplifyapp.com"]
CORS_ORIGINS=http://localhost:3000

# ==========================================
# EXTERNAL APIs
# ==========================================
TMDB_API_KEY=your_tmdb_api_key
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash

# ==========================================
# APPLICATION
# ==========================================
ENV=production
APP_NAME=movie-madders-api
LOG_LEVEL=INFO
